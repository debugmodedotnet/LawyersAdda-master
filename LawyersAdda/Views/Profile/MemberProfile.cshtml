                            <div class="divider">

                            </div>
                        </div>
                        <div class="content abt-content">
                            <div class="block-content margBSmall">
                                <div class="profile margBSmall">
                                    <h1>Adv. @ViewBag.Users.FullName</h1>
                                    <h3>Service / court </h3>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 about-more">
                                        @Html.Raw(@ViewBag.Lawyer.Bio)
                                    </div>
                                </div>
                            </div>
                            <div class="block-content">
                                <div class="info-more">
                                    <div class="row">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <table class="table table-bordered table-hover">
                                                    <tr>
                                                        <th colspan="2" class="text-center">Services</th>
                                                    </tr>
                                                    @foreach (var service in @ViewBag.Users.Lawyer.ServiceTypes)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @service.Name
                                                            </td>
                                                        </tr>
                                                    }
                                                </table>
