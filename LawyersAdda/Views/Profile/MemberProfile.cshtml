                                            <div class="col-md-6">
                                                <table class="table table-bordered table-hover" style="scroll">
                                                    <tr>
                                                        <th colspan="2" class="text-center">Courts</th>
                                                    </tr>
                                                    @foreach (var Court in @ViewBag.Users.Lawyer.Courts)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Court.Name
                                                            </td>
                                                        </tr>
                                                    }
                                                </table>
                                                @*<ul class="info-list">
                                                    <li><span class="inf">Email</span>  <span class="value">youremail@gmail.com</span></li>
