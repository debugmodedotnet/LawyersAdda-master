<div class="profile-page">
    <div class="container">
        <div class="row">
            <div class="col-md-3 nopr">
                <header id="header">
                    <div class="main-header">
                        <figure class="img-profile">
                            @if (@ViewBag.Images.Count == 0)
                            {
                                <img style="width:100%; height: 262px;" src="http://na1.www.gartner.com/imagesrv/apps/gcms/events/img/no_avatar.png;wa4b938a20593cb4ec" />
                            }
                            else
                            {
                                <img style="width:100%; height: 262px;" src="@ViewBag.Images[0].ImageUrl" />
                            }
                        </figure>
                        <nav id="main-nav" class="main-nav clearfix tabbed">
                            <ul class="list-unordered">
                                <li><a href="#portfolio"><i class="fa fa-camera"></i>Photos</a></li>
                                <li><a href="#blog"><i class="fa fa-envelope"></i>@ViewBag.Users.Email</a></li>
                                <li><a href="#contact"><i class="fa fa-phone"></i>Contact</a></li>
                            </ul>
                        </nav>
                    </div>
                    <div class="bottom-header bgWhite ofsTSmall ofsBSmall tCenter">
                        <ul class="social list-unordered">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="#"><i class="fa fa-globe"></i></a></li>
                        </ul>
                    </div>
                </header>
            </div>
            <div class="col-md-9 right-content">
                <section id="about" class="bgWhite ofsInBottom">
                    <div class="about">
                        <div class="main-title">
