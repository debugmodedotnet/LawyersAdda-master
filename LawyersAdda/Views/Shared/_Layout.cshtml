            @RenderSection("scripts", required: false)
    
    <script>
        var showSideMenu = true;
        $("#btnHumburger,#closeSideBar").click(function () {
            if (showSideMenu == true) {
                $(".sidebar").animate({ left: '0px' });
                showSideMenu = false;
            }
            else {
                $(".sidebar").animate({ left: '-300px' });
                showSideMenu = true;
            }   
        });
        
    </script>
    @if(Request.IsAuthenticated)
    {
        <script>
            $(document).ready(function () {
                alert
                $.ajax({
                    url: '@Url.Action("GetProfilePicURL", "Account")',
                    type: 'GET',
                    success: function (data) {
                        if (data != "") {
                            $("#SideBarProfilePic").attr("src", data);
                        }
                    }
                });
            });
        </script>
    }
</body>
</html>
