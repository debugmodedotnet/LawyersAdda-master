    <link href="~/Content/SideBarMenu.css" rel="stylesheet" />
    <style>
        #btnHumburger{
            display:block;
        }
    </style>
</head>
<body>
    <link href="~/Content/MainMenu.css" rel="stylesheet" />
        @*<div class="header_main" style="border-bottom: 1px solid #FF9900">*@
        <header>
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle Navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="#" onclick="location.href='@Url.Action("Index","Home")'">
                            <img class="img img-responsive" src="~/images/ljeelogo.png" />
                        </a>
                        @*<a href="#" onclick="location.href='@Url.Action("Index","Home")'"><img src="~/images/logo.png"></a>*@
                    </div>

                    @*<div class="navbar-collapse collapse">*@ 
                    <div>
                        <ul class="nav navbar-nav">
                            <li class="typeahead-menu">
                                <form class="navbar-form" action="#" role="search">
                                    <input type="text" id="Lawyer" data-provide="typeahead" autocomplete="off" class="form-control typeahead" name="LawyerName" placeholder="Type name to search verified lawyers across the country">
                                    <br/>
                                    <input type="hidden" class="span1" name="bondId" id="bondId" value="" />
                                </form>
                            </li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </nav>
        </header>
        @*</div>*@
    <div class="sidebar closed">
        <div class="text-right">
            <button id="closeSideBar">
                <i class="glyphicon glyphicon-remove"></i>
            </button>
            <a class="sidebarLogo" onclick="location.href='@Url.Action("Index","Home")'">
                <img class="img img-responsive" src="~/images/ljeelogo.png" />
            </a>
            <hr />
            <div class="sidebar-menu">
                <ul>
                    @if(Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                        <li style="padding-bottom: 60px;height:200px"><img id="SideBarProfilePic" src="~/images/avatar_default.png" class="img img-thumbnail" style="width:200px;height:200px;" /></li>
                        <li style="padding-bottom: 60px;"><h2>Hello @User.Identity.GetUserName()</h2></li>
                        <li>@Html.ActionLink("Manage", "Index", "Profile", routeValues: null, htmlAttributes: new { title = "Manage"})</li>
                        <li>@Html.ActionLink("Request Consulting", "AskQuestion", "Questions", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                        <li>@Html.ActionLink("Request Document", "Create", "Document", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
        <div class="container-fluid">
            @RenderBody()
        </div>  
       @*<footer class="footer">
           <div class="logorow">
               <div class="col-md-6 col-sm-6">
                   <p>© 2015 lawyer.com develop by xyz</p>
               </div>
           </div>
       </footer>*@  
